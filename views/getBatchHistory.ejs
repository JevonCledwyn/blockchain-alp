<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Get Batch History</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Get Batch History</h2>
    <form action="/getBatchHistory" method="post">
        <div class="form-group">
            <label for="batchId">Batch ID</label>
            <input type="text" class="form-control" id="batchId" name="batchId" required>
        </div>
        <button type="submit" class="btn btn-primary">Get History</button>
    </form>
    <% if (history) { %>
        <h3 class="mt-5">Batch History</h3>
        <ul>
            <% history.forEach(function(address) { %>
                <li><%= address %></li>
            <% }) %>
        </ul>
    <% } %>
</div>
</body>
</html>
